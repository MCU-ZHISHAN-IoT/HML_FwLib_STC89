MAKECMDGOALS ?= all

$(MAKECMDGOALS):
	@echo "---------------------------------------------------------------- " >&2
	@echo " Makefile under directory <usr> will remove soon, please run make" >&2
	@echo "under root path of project directly.                             " >&2
	@echo "---------------------------------------------------------------- " >&2
	@make --no-print-directory -C .. $(MAKECMDGOALS)
